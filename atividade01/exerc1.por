programa {
  //Elabore um algoritmo que leia dois números e mostre a soma deles.
  funcao inicio() {
    
    real a,b,s
    escreva("Vamos somar dois números. \n Digite o primeiro número: ")
    leia(a)
    escreva("Digite o segundo número: ")
    leia(b)

    s=a+b
    escreva("A somada dos dois números digitados é ",s,".")
    
  }
}
