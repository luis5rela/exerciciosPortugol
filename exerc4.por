programa {
  //Escreva um algoritmo que leia uma medida em metros e converta para centímetros.
  funcao inicio() {

    inteiro a,b

    // inserindo a medida em metros
    escreva("Digite o valor em metros:")
    leia(a)
    // converter metros em centímetos
    b=a*100
    escreva("A medida em cm é: ",b," cm.")

  }

}
